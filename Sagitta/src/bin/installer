#!/bin/bash
#Installer

#Inizialization of 'sagitta' script
python build_sagitta.py

#Change mode of 'sagitta' script
sudo chmod 755 sagitta

#Copy bin/sagitta in /usr/bin/ so you can call the program
#with 'sagitta' call on terminal
sudo cp sagitta /usr/bin/

#Remove 'sagitta' script
sudo rm sagitta
