class Document:
    '''
    classdocs
    '''


    def __init__(self):
        self.params=self.read()
        
    def read(self):
        pari = open("config.txt", "r")
        p = pari.readlines()
        for i in range(0, len(p)):
            p[i] = int(p[i].strip("\n"))
        pari.close()
        return params
    
    def get_params(self):
        return self.params
    
    def set_params(self,params):
        self.params=params
    
    def write(self,params):
        documento = open("config.txt", "w")
        for p in params.keys():
            riga = "%s;%s\n"%(p,params[p])
            documento.write(riga)
        documento.close()
        self.set_params(self.read())